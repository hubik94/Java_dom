package lista2MJ;

public class Klient extends Thread {
	Muzeum muzeum = new Muzeum().get();
	
	public void run() {
		boolean wartosc;
		do {
			wartosc = muzeum.isFree();
		} while (wartosc == false);

		try {
			Thread.sleep(3000);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		
		muzeum.exitFromMuseum();
	}
}
