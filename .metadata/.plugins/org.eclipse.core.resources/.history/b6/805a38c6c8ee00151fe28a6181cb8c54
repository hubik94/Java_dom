package lekcja51;

import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectOutputStream;

public class WriteObject {
	public static void main(String[] args) {
		System.out.println("Writting objects...");

		try (ObjectOutputStream os = new ObjectOutputStream(new FileOutputStream("people.bin"))) {

			Person people = new Person(21, "Sue");
			Person.setCount(1);		//metoda statyczna powinna byæ wywo³ana "przez nazwê klasy" a nie przez
			//obiekt który zosta³ z niej stworzony
			
			os.writeObject(people); // zapisuje tablicê Person do pliku na raz

			os.close();

		} catch (FileNotFoundException e) {
			System.out.println("nie mo¿na znaleŸæ pliku");
		} catch (IOException e) {
			System.out.println("IOException");
		}

	}
}
